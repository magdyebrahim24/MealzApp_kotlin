<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/darkGrey"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Learning App"
        app:titleTextColor="@color/white" />

    <Button
        android:id="@+id/toastViewBTN"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Toast View"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/counterViewBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/BTNPickImage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Pick Image"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNAskPermission"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/inputFormViewBTN"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Input Form View"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/BTNPassingData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealsViewBTN"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/counterViewBTN"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Counter View"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/mealsViewBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastViewBTN"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/BTNPassingData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Passing Data"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/BTNAskPermission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputFormViewBTN"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/BTNAskPermission"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Ask Permissions"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/BTNPickImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNPassingData"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/mealsViewBTN"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/darkGrey"
        android:text="Meals View"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/inputFormViewBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterViewBTN"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>